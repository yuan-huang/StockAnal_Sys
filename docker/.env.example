# ===========================================
# 文件: docker/.env
# 环境变量配置文件
# ===========================================

# 数据库通用配置
DB_PASSWORD=tradingagents123
DB_USERNAME=admin
DB_NAME=tradingagents

# MongoDB配置
MONGO_ROOT_USERNAME=${DB_USERNAME}
MONGO_ROOT_PASSWORD=${DB_PASSWORD}
MONGO_INITDB_DATABASE=${DB_NAME}

# PostgreSQL配置
POSTGRES_USER=${DB_USERNAME}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}

# Redis配置
REDIS_PASSWORD=${DB_PASSWORD}

# 管理界面配置
# MongoDB Express
ME_CONFIG_MONGODB_ADMINUSERNAME=${DB_USERNAME}
ME_CONFIG_MONGODB_ADMINPASSWORD=${DB_PASSWORD}
ME_CONFIG_BASICAUTH_USERNAME=${DB_USERNAME}
ME_CONFIG_BASICAUTH_PASSWORD=${DB_PASSWORD}

# pgAdmin配置
PGADMIN_DEFAULT_EMAIL=admin@tradingagents.com
PGADMIN_DEFAULT_PASSWORD=${DB_PASSWORD}

# Redis Commander (使用Redis密码)
REDIS_COMMANDER_REDIS_PASSWORD=${DB_PASSWORD}